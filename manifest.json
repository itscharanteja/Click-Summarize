{
  "manifest_version": 3,
  "name": "AI Summarizer Extension",
  "version": "1.0",
  "description": "Demo of Chrome's Summarizer API",
  "permissions": ["aiLanguageModelOriginTrial", "activeTab", "scripting"],
  "trial_tokens": [
    ""
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
